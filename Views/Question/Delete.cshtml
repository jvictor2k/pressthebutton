@model PressTheButton.Models.Question

<h2>Excluir</h2>

<h3>Tem certeza que quer deletar esse dilema?</h3>
<div>
    <h4 class="mt-3 mb-3">Dilema</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Model.QuestionId
        </dd>

        <dt class="col-sm-2">
            Proposta
        </dt>
        <dd class="col-sm-10">
            @Model.Text
        </dd>

        <dt class="col-sm-2">
            Desvantagem
        </dt>
        <dd class="col-sm-10">
            @Model.Negative
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="QuestionId" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a class="btn btn-primary" asp-action="Index">Back to List</a>
    </form>
</div>
