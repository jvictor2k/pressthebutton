@model PressTheButton.Models.Question

<h2 class="mt-3 mb-3">Editar</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="QuestionId" />

    <div class="form-group">
        <label asp-for="Text"></label>
        <input asp-for="Text" class="form-control" />
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="Negative"></label>
        <input asp-for="Negative" class="form-control" />
        <span asp-validation-for="Negative" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-success mt-3 mb-3" />
    </div>
</form>

<a class="btn btn-primary" asp-action="Index">Retornar</a>
