@using PressTheButton.ViewModels
@model NotificationViewModel

<div class="alert @(Model.IsNew ? "bg-info" : "bg-light") card border-1 border-primary bg-opacity-10 shadow-sm mb-2">
    <div class="card-body">
        <div class="row">
            <div class="col-auto">
                <img src="~/images/profilePicture/@Model.ProfilePicPath" class="img-fixed-size-low" />
            </div>
            <div class="col-auto">
                <div class="d-flex justify-content-between">
                    <p class="card-title me-2 mb-0"><strong>@Model.ProfileName fez um comentário sobre seu dilema</strong></p>
                    <p class="card-title text-muted mb-0 me-2">@Model.Notification.Date.ToString("dd/MM/yyyy HH:mm")</p>
                    @if(Model.IsNew)
                    {
                        <span class="card-title badge bg-primary">NOVO</span>
                    }
                </div>
                <span class="card-text mt-2 badge bg-primary">@Model.TextDestinatary</span>
                <p class="card-text mt-2">@Model.TextSender</p>
            </div>
        </div>
    </div>
</div>