@{
    ViewData["Title"] = "Home Page";
}

@model PressTheButton.Models.Question

<style>
    .center-outer {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .brilho:hover {
        filter: brightness(80%);
        transition: filter 0.5s ease;
    }
</style>

<div class="container">
    <div class="row justify-content-center align-items-center">
        <h2 class="mt-5 text-primary text-center">
            <strong>VOCÊ VAI APERTAR O BOTÃO?</strong>
        </h2>

        <div class="center-outer mt-3 mb-3">
            <form asp-controller="Home" asp-action="ApertarBotao" asp-route-questionId="@Model.QuestionId" method="post">
                <button type="submit" class="btn img-fluid">
                    <img src="~/images/button.png" width="150" class="brilho" />
                </button>
            </form>
        </div>

        <div class="card border-primary shadow text-center mt-3 w-auto h-auto">
            <div class="card-body">
                <div class="card-text">@Html.DisplayFor(model => model.Text)</div>
            </div>
        </div>
        <p class="text-primary text-center mt-3"><strong>Mas...</strong></p>
        <div class="card border-primary shadow text-center mb-3 mx-3 w-auto h-auto">
            <div class="card-body">
                <div class="card-text">@Html.DisplayFor(model => model.Negative)</div>
            </div>
        </div>

        <div class="center-outer mt-3 mb-3">
            <form asp-controller="Home" asp-action="NaoApertarBotao" asp-route-questionId="@Model.QuestionId" method="post">
                <button type="submit" class="btn btn-lg btn-danger"><strong>NÃO APERTAR</strong></button>
            </form>
        </div>
    </div>
</div>
